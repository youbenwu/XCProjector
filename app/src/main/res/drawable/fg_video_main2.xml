<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#60ffffff" />
                </shape>
            </item>
            <item android:drawable="@drawable/bg_play2" />
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#90ffffff" />
                </shape>
            </item>
            <item android:drawable="@drawable/bg_play2" />
        </layer-list>
    </item>
    <item android:drawable="@drawable/bg_play2" />

</selector>
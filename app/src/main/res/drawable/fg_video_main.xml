<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item android:top="22dp"
                android:bottom="22dp"
                android:left="17dp"
                android:right="17dp">
                <shape android:shape="rectangle">
                    <stroke android:width="10dp" android:color="#60ffffff" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_play_bg1"/>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:top="21dp"
                android:bottom="23dp"
                android:left="19dp"
                android:right="15dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#90ffffff" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_play_bg1"/>
        </layer-list>
    </item>
    <item android:drawable="@drawable/ic_play_bg1" />

</selector>
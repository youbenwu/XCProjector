<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SlideListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/left"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_view1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:layout_width="608dp"
                android:layout_height="398dp">



                <com.outmao.xcprojector.video.VideoView
                    android:id="@+id/video_view1_image"
                    android:paddingLeft="19dp"
                    android:paddingRight="15dp"
                    android:paddingTop="21dp"
                    android:paddingBottom="23dp"
                    android:visibility="gone"
                    android:focusable="true"
                    android:foreground="@drawable/fg_video_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.outmao.xcprojector.video.VideoView>


<!--                <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer-->
<!--                    android:id="@+id/video_view1"-->
<!--                    android:paddingLeft="19dp"-->
<!--                    android:paddingRight="15dp"-->
<!--                    android:paddingTop="21dp"-->
<!--                    android:paddingBottom="23dp"-->
<!--                    android:focusable="true"-->
<!--                    android:foreground="@drawable/fg_video_main"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"/>-->
                <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                    android:id="@+id/video_view1"
                    android:paddingLeft="19dp"
                    android:paddingRight="15dp"
                    android:paddingTop="21dp"
                    android:paddingBottom="23dp"
                    android:focusable="true"
                    android:foreground="@drawable/fg_video_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:src="@drawable/ic_play_top"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="42dp"
                    android:layout_width="533dp"
                    android:layout_height="36dp"/>

                <TextView
                    android:id="@+id/hotel_name"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/light_blue_A400"
                    android:textAlignment="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:letterSpacing="0.3"
                    />

                <TextView
                    android:id="@+id/main_title"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="52dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="63dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="17dp"
                android:layout_marginBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/rl_view4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.outmao.xcprojector.video.VideoView
                        android:id="@+id/video_view4"
                        android:focusable="true"
                        android:foreground="@drawable/fg_video_main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.outmao.xcprojector.video.VideoView>

                    <TextView
                        android:id="@+id/video_view_4_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:letterSpacing="0.1"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_view5"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.outmao.xcprojector.video.VideoView
                        android:id="@+id/video_view5"
                        android:focusable="true"
                        android:foreground="@drawable/fg_video_main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </com.outmao.xcprojector.video.VideoView>

                    <TextView
                        android:id="@+id/video_view_5_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="25dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="textEnd"
                        android:layout_alignParentEnd="true"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:letterSpacing="0.1"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_view6"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <com.outmao.xcprojector.video.VideoView
                        android:id="@+id/video_view6"
                        android:focusable="true"
                        android:foreground="@drawable/fg_video_main2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/video_view_6_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="25dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:textAlignment="textEnd"
                            android:layout_alignParentEnd="true"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:letterSpacing="0.1"
                            />

                    </com.outmao.xcprojector.video.VideoView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_toRightOf="@id/left"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="14dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_view2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <com.outmao.xcprojector.video.VideoView
                    android:id="@+id/video_view2"
                    android:focusable="true"
                    android:foreground="@drawable/fg_video_main3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/video_view_2_title"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/video_view_2_subtitle"
                    android:layout_marginEnd="25dp"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:layout_alignParentEnd="true"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                />
                <TextView
                    android:id="@+id/video_view_2_subtitle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:letterSpacing="0.1"
                />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_view3"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <com.outmao.xcprojector.video.VideoView
                    android:id="@+id/video_view3"
                    android:focusable="true"
                    android:foreground="@drawable/fg_video_main3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.outmao.xcprojector.video.VideoView>

                <TextView
                    android:id="@+id/video_view_3_title"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/video_view_3_subtitle"
                    android:layout_marginEnd="25dp"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:layout_alignParentEnd="true"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:letterSpacing="0.1"
                    />
                <TextView
                    android:id="@+id/video_view_3_subtitle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="25dp"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:letterSpacing="0.1"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>



    <com.outmao.xcprojector.views.XfermodeImageView
        android:visibility="gone"
        android:id="@+id/test_image"
        app:dest="@drawable/ic_play_mb2"
        android:scaleType="centerCrop"
        android:layout_width="200dp"
        android:layout_height="200dp">

    </com.outmao.xcprojector.views.XfermodeImageView>



</FrameLayout>
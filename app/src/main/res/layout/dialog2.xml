<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="578dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@mipmap/dialog_bg">

   <RelativeLayout
       android:background="@mipmap/dialog_bg_top"
       android:layout_width="match_parent"
       android:layout_height="75dp">

       <TextView
           android:id="@+id/tv_title"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:text="尊敬的用户您好"
           android:textColor="@color/white"
           android:textSize="33sp" />

       <TextView
           android:id="@+id/tv_close"
           android:focusable="true"
           android:layout_marginRight="8dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:background="@drawable/bg_button_close"
           android:layout_width="48dp"
           android:layout_height="48dp"/>

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sub_msg"
                android:layout_marginTop="6dp"
                android:text="由于该酒店已欠费，已暂停系统服务使\n用，待酒店完成续费成功，可恢复正常\n开机使用"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/btn_ok"
        android:text="好的"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:background="@mipmap/ic_button_bg_y"
        android:layout_width="260dp"
        android:layout_height="82dp"/>


    <ImageView
        android:src="@mipmap/dialog_bg_bottom"
        android:layout_width="match_parent"
        android:layout_height="24dp"/>

</LinearLayout>

</RelativeLayout>